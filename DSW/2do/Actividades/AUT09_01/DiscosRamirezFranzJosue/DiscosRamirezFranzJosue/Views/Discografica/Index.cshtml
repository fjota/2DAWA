@model IEnumerable<DiscosRamirezFranzJosue.Models.Discografica>

@{
  ViewBag.Title = "Lista discograficas";
}

<h2>Discograficas</h2>

<p>
  @Html.ActionLink("Crear discografica", "CreateDiscografica")
</p>
<table class="table">
  <tr>
    <th>
      @Html.DisplayNameFor(model => model.IdDiscografica)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.Nombre)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.CodPais)
    </th>
    <th></th>
  </tr>

  @foreach (var item in Model)
  {
<tr>
  <td>
    @Html.DisplayFor(modelItem => item.IdDiscografica)
  </td>
  <td>
    @Html.DisplayFor(modelItem => item.Nombre)
  </td>
  <td>
    @Html.DisplayFor(modelItem => item.CodPais)
  </td>
  <td>
    @Html.ActionLink("Ver discos", "ShowDiscos", new { IdDiscografica = item.IdDiscografica  })
  </td>
</tr>
}

</table>
