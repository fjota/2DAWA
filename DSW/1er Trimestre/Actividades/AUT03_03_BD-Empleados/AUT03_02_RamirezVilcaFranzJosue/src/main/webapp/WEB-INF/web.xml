<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>BuscadorEmpleadosServlet</servlet-name>
        <servlet-class>es.cifpcm.empleados.buscador.web.BuscadorEmpleadosServlet</servlet-class>
        <init-param>
            <param-name>app.config</param-name>
            <param-value>empleados</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>NominasServlet</servlet-name>
        <servlet-class>es.cifpcm.empleados.buscador.web.NominasServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BuscadorEmpleadosServlet</servlet-name>
        <url-pattern>/buscadorempleados</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NominasServlet</servlet-name>
        <url-pattern>/verNominas</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
